  <!-- Feature cards driven by controller-provided copy -->
  <h2 class="features h2">Features</h2>
  <div class="feature-grid">
	<% (features || []).forEach(function(f){ %>
	  <div class="feature">
		<h3><%= f.icon %> <%= f.title %></h3>
		<p><%= f.copy %></p>
	  </div>
	<% }) %>
  </div>
  
  <section class="getting-started">
	<h2>Getting Started</h2>
	<ol>
	  <li>Copy <code>.env.example</code> to <code>.env</code> and configure your environment variables</li>
	  <li>Set up your PostgreSQL database</li>
	  <li>Run <code>npm run migrate</code> to create database tables</li>
	  <li>Run <code>npm run seed</code> to populate with sample data</li>
	  <li>Start the development server with <code>npm run dev</code></li>
	</ol>
  </section>
  
